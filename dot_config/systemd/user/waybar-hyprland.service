[Unit]
Description=A lightweight Wayland statusbar for hyprland
Documentation=man:waybar(1)
PartOf=sway-session.target
ConditionEnvironment=XDG_CURRENT_DESKTOP=Hyprland

[Service]
Type=simple
Environment="XDG_CURRENT_DESKTOP=Unity WEATHER_LOC=Berlin"
ExecStart=/usr/bin/waybar -c ${HOME}/.config/waybar/hyprland-mini-config
ExecReload=kill -SIGUSR2 $MAINPID
ExecStop=/bin/kill -2 $MAINPID
Restart=on-failure
RestartSec=1
TimeoutStopSec=10

[Install]
WantedBy=sway-session.target
